<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purchase_background"
        android:orientation="vertical"
        tools:context=".buyList.Ui.BuyListDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/detail_background">

            <ImageButton
                android:id="@+id/detail_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/detail_image_imageView"
                android:layout_width="220dp"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/test_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:id="@+id/detail_goods_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="빠삐코"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="가격 30000원"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_goods_textView" />

            <TextView
                android:id="@+id/detail_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="18dp"
                android:text="구매날짜 2020.11.04"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/detail_price_textView"
                app:layout_constraintTop_toBottomOf="@id/detail_goods_textView" />

            <TextView
                android:id='@+id/detail_boughtTogether_textView'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="@string/bought_together"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_price_textView" />

            <ImageView
                android:id="@+id/detail_people1_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_boughtTogether_textView" />

            <TextView
                android:id="@+id/detail_people1_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:text="이마크"
                app:layout_constraintLeft_toRightOf="@id/detail_people1_imageView"
                app:layout_constraintTop_toBottomOf="@id/detail_boughtTogether_textView" />

            <ImageView
                android:id="@+id/detail_people2_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_people1_imageView" />

            <TextView
                android:id="@+id/detail_people2_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="이마크"
                app:layout_constraintLeft_toRightOf="@id/detail_people2_imageView"
                app:layout_constraintTop_toBottomOf="@id/detail_people1_textView" />

            <ImageView
                android:id="@+id/detail_people3_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_people2_imageView" />

            <TextView
                android:id="@+id/detail_people3_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="이마크"
                app:layout_constraintLeft_toRightOf="@id/detail_people3_imageView"
                app:layout_constraintTop_toBottomOf="@id/detail_people2_textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>