<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/post_image_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/post_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/post_image_imageView"
                android:text="testtesttest"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/post_user_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="test"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/post_title_textView"
                app:layout_constraintLeft_toRightOf="@id/post_image_imageView"/>

            <TextView
                android:id="@+id/post_location_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/post_user_textView"
                app:layout_constraintTop_toBottomOf="@id/post_title_textView" />

            <TextView
                android:id="@+id/post_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ss.ss.ss"
                android:textSize="10sp"
                android:textColor="@color/post_gray"
                app:layout_constraintTop_toBottomOf="@id/post_user_textView"
                app:layout_constraintLeft_toRightOf="@id/post_image_imageView" />


            <TextView
                android:id="@+id/post_category_button"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/post_location_textView"
                app:layout_constraintLeft_toRightOf="@id/post_date_textView"
                android:text="te" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>